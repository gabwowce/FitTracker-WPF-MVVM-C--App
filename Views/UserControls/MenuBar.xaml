<UserControl x:Class="FitTracker.Views.UserControls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FitTracker.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Background="White" BorderBrush="Gainsboro" BorderThickness="1">
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
            <Image Source="/Views/Images/logo.png" Width="200" Height="100" Margin="10,0,0,10"/>

            <Button Content="My Profile" Background="{Binding ProfileButtonBackground}" Width="200" Height="30" Margin="10,0,0,0" Click="MyProfileNavButt"/>
            <Button Content="My Diary" Background="{Binding DiaryButtonBackground}" Width="200" Height="30" Margin="10,0,0,0" Click="MyDiaryNavButt"/>
            <Button Content="My ToDo List" Background="{Binding DashboardButtonBackground}" Width="200" Height="30" Margin="10,0,0,0" Click="DashboardNavButt"/>
        </StackPanel>
    </Border>
    
</UserControl>
