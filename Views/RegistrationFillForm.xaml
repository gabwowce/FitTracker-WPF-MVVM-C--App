<Page x:Class="FitTracker.Views.RegistrationFillForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FitTracker.Views"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationFillForm">


    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Image Source="Images/logo.png" Width="200" Height="100" Margin="0,10"/>

        <xctk:WatermarkTextBox Watermark="Gender" x:Name="GenderBox" Width="200" Margin="0,10" Foreground="#5800AA"/>
        <xctk:WatermarkTextBox Watermark="Weight (kg)" x:Name="WeightBox" Width="200" Margin="0,10" Foreground="#5800AA"/>
        <xctk:WatermarkTextBox Watermark="Height (cm)" x:Name="HeightBox" Width="200" Margin="0,10" Foreground="#5800AA"/>
        <xctk:WatermarkTextBox Watermark="Age" x:Name="AgeBox" Width="200" Margin="0,10" Foreground="#5800AA"/>
        <Button Content="Submit" Click="Submit" Width="200" Margin="0,10" Background="#BFB2FF" Foreground="#5800AA"/>
    </StackPanel>
</Page>
