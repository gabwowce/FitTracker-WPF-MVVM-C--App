<Window x:Class="FitTracker.Views.DateSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitTracker.Views"
        mc:Ignorable="d"
        Title="Select Date" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DatePicker x:Name="datePicker" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="OK" Width="60" Background="#BFB2FF" Foreground="White" Height="40" BorderThickness="2" Margin="0,20" FontWeight="DemiBold" BorderBrush="#BFB2FF" Click="OKButton_Click"/>
    </Grid>
</Window>
